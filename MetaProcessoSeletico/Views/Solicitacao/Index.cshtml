@model IEnumerable<Modelo.SolicitacaoViewModel>

    @{
    ViewData["Title"] = "Solicitacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1>Solicitacao</h1>

    <p>
        <a asp-action="Create">Adicionar Nova Solicitação</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataConclusao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Responsavel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            string descricaoEnum = Utilitario.Util.PegaDescricaoEnum(item.Status);
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataConclusao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsavel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => descricaoEnum)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Delete", new {  id=item.Id })
                </td>
            </tr>
            }
        </tbody>
    </table>
